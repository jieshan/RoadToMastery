<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RoadToMastery - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://d3js.org/d3.v3.min.js" charset="utf-8"></script>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <link rel="shortcut icon" type="image/x-icon" href="http://ddragon.leagueoflegends.com/cdn/5.5.1/img/ui/spells.png" />
</head>
<body>
    <div id="siteNavBar" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("RoadToMastery", "Index", "Home", new { area = "" }, new { @class = "navbar-brand navbar-brand-custom" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-nav-custom">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="dropdown-toggle">Champions <b class="caret"></b></a>
                        <div id="championSelector" class="row dropdown-menu"></div>
                    </li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
            <script type="text/javascript">
                var names = @Html.Raw(Json.Encode(ViewData["names"]));
                var images = @Html.Raw(Json.Encode(ViewData["champImages"]));
                var alphabeticalIds = @Html.Raw(Json.Encode(@ViewData["alphabeticalIds"]));
            </script>
            <script type="text/javascript" src="~/Scripts/Shared.js"></script>
            <link rel="stylesheet" type="text/css" href="~/Content/Shared.css">
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - RoadToMastery</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
